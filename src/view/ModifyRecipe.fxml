<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ModifyRecipeController">
   <children>
      <Rectangle arcHeight="50.0" arcWidth="50.0" fill="#ffffff00" height="570.0" layoutX="15.0" layoutY="15.0" stroke="BLACK" strokeType="INSIDE" width="770.0" />
      <Button layoutX="710.0" layoutY="506.0" onAction="#onCancelClick" text="Cancel" />
      <Label fx:id="modifyRecipeLabel" layoutX="45.0" layoutY="29.0" prefHeight="43.0" prefWidth="170.0" text="Modify Product">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="recipeNameBox" layoutX="125.0" layoutY="139.0" prefHeight="25.0" prefWidth="117.0" />
      <TextField fx:id="recipeServingsBox" layoutX="125.0" layoutY="175.0" prefHeight="25.0" prefWidth="75.0" />
      <TextField fx:id="recipeCostBox" layoutX="125.0" layoutY="211.0" prefHeight="25.0" prefWidth="75.0" />
      <TextField fx:id="flavorTagsBox" layoutX="264.0" layoutY="247.0" prefHeight="25.0" prefWidth="75.0" />
      <Label layoutX="70.0" layoutY="98.0" prefHeight="25.0" prefWidth="52.0" text="ID" />
      <Label layoutX="70.0" layoutY="139.0" prefHeight="25.0" prefWidth="52.0" text="Name" />
      <Label layoutX="70.0" layoutY="175.0" prefHeight="25.0" prefWidth="52.0" text="Inv" />
      <Label layoutX="70.0" layoutY="211.0" prefHeight="25.0" prefWidth="75.0" text="Price" />
      <Label layoutX="70.0" layoutY="247.0" prefHeight="25.0" prefWidth="75.0" text="Max" />
      <Button layoutX="618.0" layoutY="506.0" onAction="#onSaveClick" prefHeight="25.0" prefWidth="52.0" text="Save" />
      <Label layoutX="231.0" layoutY="247.0" prefHeight="25.0" prefWidth="44.0" text="Min" />
      <TableView fx:id="allIngredientsTable" layoutX="384.0" layoutY="74.0" prefHeight="158.0" prefWidth="378.0">
         <columns>
            <TableColumn fx:id="ingredientName" text="Part Name" />
            <TableColumn fx:id="ingredientStock" prefWidth="100.0" text="Inventory Level" />
            <TableColumn fx:id="ingredientPricePerEach" prefWidth="128.0" text="Price/Cost Per Unit" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button layoutX="711.0" layoutY="237.0" onAction="#onAddIngredientClick" prefHeight="25.0" prefWidth="54.0" text="Add" />
      <Button layoutX="618.0" layoutY="466.0" onAction="#onRemoveRequiredIngredientClick" text="Remove Associated Part" />
      <TextField fx:id="queryIngredients" layoutX="594.0" layoutY="39.0" onAction="#ingredientSearchActivate" prefHeight="25.0" prefWidth="170.0" promptText="search by Part ID or Name" />
      <TableView fx:id="requiredIngredientsTable" layoutX="384.0" layoutY="300.0" prefHeight="158.0" prefWidth="378.0">
         <columns>
            <TableColumn fx:id="requiredIngredientName" text="Part Name" />
            <TableColumn fx:id="requiredIngredientStock" prefWidth="100.0" text="Inventory Level" />
            <TableColumn fx:id="requiredIngredientPricePerEach" prefWidth="128.0" text="Price/Cost Per Unit" />
         </columns>
      </TableView>
      <Label fx:id="errorBox" layoutX="384.0" layoutY="39.0" prefHeight="25.0" prefWidth="197.0" textFill="RED" />
   </children>
</AnchorPane>
