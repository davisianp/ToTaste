<AnchorPane prefHeight="400.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <children>
      <Rectangle arcHeight="30.0" arcWidth="30.0" fill="#ffffff00" height="245.0" layoutX="459.0" layoutY="96.0" stroke="BLACK" strokeType="INSIDE" width="421.0" />
      <Rectangle arcHeight="30.0" arcWidth="30.0" fill="#ffffff00" height="245.0" layoutX="18.0" layoutY="96.0" stroke="BLACK" strokeType="INSIDE" width="430.0" />
      <Label fx:id="ingredientInventory" layoutX="44.0" layoutY="113.0" prefHeight="17.0" prefWidth="84.0" text="Ingredients">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <TableView fx:id="inventoryIngredientTable" layoutX="44.0" layoutY="137.0" prefHeight="155.0" prefWidth="385.0">
        <columns>
          <TableColumn fx:id="ingredientName" prefWidth="122.0" text="Ingredient Name" />
            <TableColumn fx:id="ingredientNumberOfUnits" prefWidth="141.0" text="Ingredient Stock" />
            <TableColumn fx:id="ingredientPriceUnitCombo" prefWidth="75.0" text="Price Per Each" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button layoutX="257.0" layoutY="301.0" onAction="#onAddIngredientClick" prefHeight="25.0" prefWidth="54.0" text="Add" />
      <Button layoutX="318.0" layoutY="301.0" onAction="#onModifyIngredientClick" text="Modify" />
      <Button layoutX="378.0" layoutY="301.0" onAction="#onDeleteIngredientClick" text="Delete" />
      <Label fx:id="recipeInventory" layoutX="475.0" layoutY="113.0" prefHeight="17.0" prefWidth="84.0" text="Recipes">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <TableView fx:id="inventoryRecipeTable" layoutX="475.0" layoutY="137.0" prefHeight="155.0" prefWidth="385.0">
         <columns>
            <TableColumn fx:id="recipeName" prefWidth="98.0" text="Recipe Name" />
            <TableColumn fx:id="recipeServings" prefWidth="100.0" text="Servings in Recipe" />
            <TableColumn fx:id="recipeCost" prefWidth="118.0" text="Cost to Make" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button layoutX="689.0" layoutY="301.0" onAction="#onAddRecipeClick" prefHeight="25.0" prefWidth="54.0" text="Add" />
      <Button layoutX="749.0" layoutY="301.0" onAction="#onModifyRecipeClick" text="Modify" />
      <Button layoutX="809.0" layoutY="301.0" onAction="#onDeleteRecipeClick" text="Delete" />
      <TextField fx:id="queryIngredients" layoutX="173.0" layoutY="109.0" onAction="#ingredientSearchActivate" prefHeight="25.0" prefWidth="256.0" promptText="search by ingredient name" />
      <TextField fx:id="queryRecipes" layoutX="604.0" layoutY="109.0" onAction="#recipeSearchActivate" prefHeight="25.0" prefWidth="256.0" promptText="search by recipe name or flavor descriptions" />
      <Label fx:id="titleLabel" layoutX="18.0" layoutY="34.0" prefHeight="25.0" prefWidth="84.0" text="To Taste ">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Button layoutX="809.0" layoutY="353.0" mnemonicParsing="false" onAction="#onExitButtonClick" text="Exit" />
      <Label fx:id="errorRecipeBox" alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="475.0" layoutY="301.0" prefHeight="25.0" prefWidth="197.0" textAlignment="RIGHT" textFill="RED" />
